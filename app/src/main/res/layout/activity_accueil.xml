<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Accueil"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/mainlayout"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="284dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp"
                android:gravity="center_horizontal"
                android:hint="Votre mot de passe"
                android:id="@+id/TB_Password" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:textSize="60dp"
                    android:text="1"
                    android:id="@+id/BTN_1"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:onClick="onKeyPress" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:textSize="60dp"
                    android:text="2"
                    android:id="@+id/BTN_2"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:onClick="onKeyPress" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:textSize="60dp"
                    android:text="3"
                    android:id="@+id/BTN_3"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:onClick="onKeyPress" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:textSize="60dp"
                    android:text="4"
                    android:id="@+id/BTN_4"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:onClick="onKeyPress" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:textSize="60dp"
                    android:text="5"
                    android:id="@+id/BTN_5"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:onClick="onKeyPress" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:textSize="60dp"
                    android:text="6"
                    android:id="@+id/BTN_6"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:onClick="onKeyPress" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:textSize="60dp"
                    android:text="7"
                    android:id="@+id/BTN_7"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:onClick="onKeyPress" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:textSize="60dp"
                    android:text="8"
                    android:id="@+id/BTN_8"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:onClick="onKeyPress" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:textSize="60dp"
                    android:text="9"
                    android:id="@+id/BTN_9"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:onClick="onKeyPress" />
                <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:textSize="60dp"
                android:text="0"
                android:id="@+id/BTN_0"
                android:layout_row="3"
                android:layout_column="1"
                android:onClick="onKeyPress" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:textSize="60dp"
                    android:text="X"
                    android:id="@+id/BTN_X"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:onClick="effacerPassword" />
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="287dp"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Votre nom d'usager"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:editable="true"
                android:nextFocusUp="@id/mainlayout"
                android:nextFocusLeft="@id/mainlayout"
                android:id="@+id/TB_Username" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

        </LinearLayout>

        <Button
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Valider"
            android:textSize="30dp"
            android:id="@+id/BTN_Valider"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.19"
            android:onClick="verifierInfo" />

        <Button
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Effacer"
            android:textSize="30dp"
            android:id="@+id/BTN_Effacer"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.19"
            android:onClick="effacerUsername" />

    </LinearLayout>
</RelativeLayout>
